RewriteEngine On
RewriteBase /

# ------------------------------------------------
# Remove .php extension from all files
# ------------------------------------------------
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^([^/]+)$ $1.php [L]

# Redirect .php URLs to clean URLs (SEO friendly)
RewriteCond %{THE_REQUEST} \s/+(.+?)\.php[\s?] [NC]
RewriteRule ^ %1 [R=301,L]

# ------------------------------------------------
# Custom URL Rewrites for Slugs
# ------------------------------------------------

# Product details by slug
# Example: /product/some-product-slug
RewriteRule ^product/([^/]+)/?$ product-details.php?slug=$1 [L,QSA]

# Category by slug
# Example: /category/electronics
RewriteRule ^category/([^/]+)/?$ category.php?slug=$1 [L,QSA]

# Sub-category by slug
# Example: /subcategory/laptops
RewriteRule ^subcategory/([^/]+)/?$ sub-category.php?slug=$1 [L,QSA]


