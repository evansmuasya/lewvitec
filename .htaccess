<script>
$(document).ready(function() {
    // Fix product links to use 3-segment format
    $('a[href*="/products/"]').each(function() {
        var href = $(this).attr('href');
        var currentPath = window.location.pathname;
        
        // Check if this is a 2-segment product link
        if (href.match(/\/products\/[^\/]+\/[^\/]+\/$/) && !href.match(/\/products\/[^\/]+\/[^\/]+\/[^\/]+\/$/)) {
            // Extract category and product slug from href
            var matches = href.match(/\/products\/([^\/]+)\/([^\/]+)\/$/);
            if (matches) {
                var categorySlug = matches[1];
                var productSlug = matches[2];
                
                // Get current subcategory from URL
                var currentMatches = currentPath.match(/\/products\/([^\/]+)\/([^\/]+)\/$/);
                if (currentMatches && currentMatches[2] !== productSlug) {
                    var subcategorySlug = currentMatches[2];
                    // Create proper 3-segment URL
                    var newHref = '/products/' + categorySlug + '/' + subcategorySlug + '/' + productSlug + '/';
                    $(this).attr('href', newHref);
                }
            }
        }
    });
});
</script>
