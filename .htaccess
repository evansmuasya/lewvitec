<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Remove .php extension
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}\.php -f
    RewriteRule ^(.*)$ $1.php [L]
    
    # Product details page with slugs
    RewriteRule ^products/([^/]+)/([^/]+)/([^/]+)/?$ product-details.php?category_slug=$1&subcategory_slug=$2&product_slug=$3 [L,QSA]
    
    # Subcategory page with slugs
    RewriteRule ^products/([^/]+)/([^/]+)/?$ sub-category.php?category_slug=$1&subcategory_slug=$2 [L,QSA]
    
    # Category page with slug
    RewriteRule ^products/([^/]+)/?$ category.php?category_slug=$1 [L,QSA]
    
    # Alternative direct routes (if needed)
    RewriteRule ^category/([^/]+)/?$ category.php?category_slug=$1 [L,QSA]
    RewriteRule ^sub-category/([^/]+)/?$ sub-category.php?subcategory_slug=$1 [L,QSA]
    RewriteRule ^product/([^/]+)/?$ product-details.php?product_slug=$1 [L,QSA]
</IfModule>
