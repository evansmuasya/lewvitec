<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Remove .php extension
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}\.php -f
    RewriteRule ^(.*)$ $1.php [L]
    
    # Rewrite slugs to actual PHP files
    # Rule for category/subcategory/product (3 segments)
    RewriteRule ^products/([^/]+)/([^/]+)/([^/]+)/?$ product-details.php?category_slug=$1&subcategory_slug=$2&product_slug=$3 [L,QSA]
    
    # NEW RULE: Handle category/product (2 segments) and redirect to find subcategory
    RewriteRule ^products/([^/]+)/([^/]+)/?$ find-subcategory.php?category_slug=$1&product_slug=$2 [L,QSA]
    
    # Rule for category/subcategory only
    RewriteRule ^products/([^/]+)/([^/]+)/?$ category.php?category=$1&subcategory=$2 [L,QSA]
    
    # Rule for category only
    RewriteRule ^products/([^/]+)/?$ category.php?category=$1 [L,QSA]
</IfModule>
